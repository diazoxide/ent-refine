{{- /* gotype: github.com/entkit/entkit.RefineGen */ -}}

{{- define ".prettierrc" -}}
{
    "arrowParens": "always",
    "semi": true,
    "trailingComma": "all",
    "singleQuote": false,
    "printWidth": 80,
    "tabWidth": 4,
    "overrides": [
        {
            "files": ["*.yml", "*.yaml", "*.json"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
{{- end -}}